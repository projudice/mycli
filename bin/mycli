#!/usr/bin/env node
const program = require('commander');
const Creator = require('../src/creator.js');

const project = new Creator();

program
    .command('list')
    .action(() => {
        console.log('templates:')
        console.log('1. Hello World')
    });
program
    .command('create')
    .action(() => {
        project.init();
    });
program.parse(process.argv);
